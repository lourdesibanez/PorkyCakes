<body>
    <div class="container">
        <nav class="navbar">
            <div class="user">
                <img class="user-img" src="images/profile.png" alt="user">
                <div class="user-info">
                    <h3>Username</h3>
                    <p>Admin</p>
                </div>
            </div>
        </nav>
        <aside class="sidebar">
            <div class="logo">
                <img class="logo__img" src="images/logo.png" alt="Logo">
                <h1 class="logo__title">Porky Cakes</h1>
            </div>
            <div class="menu">
                <ul>
                    <li class="">
                        <a class="menu__item menu__item--disabled">
                            <span class="material-symbols-outlined menu__icon menu__icon--disabled">
                                note_stack
                            </span>
                            <span class="menu__p menu__p--disabled">
                                Recetas
                                <span class="material-symbols-outlined menu__icon menu__icon--disabled">
                                    expand_more
                                </span>
                            </span>
                        </a>
                        <ul>
                            <li><a class="menu__subitem" href="">Crear Receta</a></li>
                        </ul>
                    </li>
                </ul>
                <ul>
                    <li class="">
                        <a class="menu__item menu__item--disabled">
                            <span class="material-symbols-outlined menu__icon menu__icon--disabled">
                                fact_check
                            </span>
                            <span class="menu__p menu__p--disabled">
                                Pedidos
                                <span class="material-symbols-outlined menu__icon menu__icon--disabled">
                                    chevron_right
                                </span>
                            </span>
                        </a>
                        <ul>
                            <li><a class="menu__subitem menu__subitem--disabled" href="pedidos.html">Ver Pedidos</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul>
                    <li class="">
                        <a class="menu__item menu__item--disabled">
                            <span class="material-symbols-outlined menu__icon menu__icon--disabled">
                                fact_check
                            </span>
                            <span class="menu__p menu__p--disabled">
                                Stock
                                <span class="material-symbols-outlined menu__icon menu__icon--disabled">
                                    chevron_right
                                </span>
                            </span>
                        </a>
                        <ul>
                            <li>
                                <a class="menu__subitem menu__subitem--disabled" href="actualizarStock.html">Actualizar Stock</a>
                            </li>
                            <li>
                                <a class="menu__subitem menu__subitem--disabled" href="listaCompras.html">Lista de Compras</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </aside>
        <div class="content">
            <p class="breadcrum">Recetas / <span>Crear nueva receta</span></p>
            <form class="section" action="">
                <h2 class="section-title">Actualizar Stock</h2>
                <div class="box">
                    <h3 class="box__title">Cargar ingredientes</h3>
                    <div class="form-ing">
                        <div class="form-ing__inputgroup nombre">
                            <label class="form-ing__label" for="ingrediente">Seleccione ingrediente:</label>
                            <select class="form-ing__input" name="ingrediente[]" id="item">
                                <option selected value="0">Ninguno</option>
                                <option value="1">Cacao</option>
                            </select>
                        </div>
                        <div class="form-ing__inputgroup cantidad">
                            <label class="form-ing__label" for="cantidad">Cantidad</label>
                            <input class="form-ing__input" id="cantidad" type="text" name="cantidad[]">
                        </div>
                        <div class="form-ing__inputgroup unidad">
                            <label class="form-ing__label" for="unidad">Unidad</label>
                            <input class="form-ing__input" id="unidad" type="text" name="unidad[]">
                        </div>
                        <div class="form-ing__inputgroup boton">
                            <p>&nbsp;</p>
                            <button class="form-ing__btn" id="add-item">Agregar</button>
                        </div>
                    </div>
                    <div id="itemcitos">
                        <div class="ingredients-group">
                            <!--<button class="ingredients-group__btn">
                                <span class="material-symbols-outlined ingredients-group__icon">
                                    delete_forever
                                </span>
                            </button>
                            <p class="ingredients-group__name">
                                <input type="text" name="nombre[]">
                                <input type="text" name="cantidad[]">
                                <input type="text" name="unidad[]">
                            </p> -->
                        </div>
                    </div>
                </div>
                <hr>
                <input type="submit" class="form-ing__btn form-ing__btn--save" value="Actualizar Stock">
            </form>
        </div>
    </div>
    <script src="main.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>-->
